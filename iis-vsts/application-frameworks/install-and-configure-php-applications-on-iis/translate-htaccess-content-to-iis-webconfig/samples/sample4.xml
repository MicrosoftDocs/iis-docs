<security>
	<requestFiltering>
		<denyUrlSequences>
			<add sequence="engine" />
			<add sequence="inc" />
			<add sequence="info" />
			<add sequence="install" />
			<add sequence="module" />
			<add sequence="profile" />
			<add sequence="po" />
			<add sequence="sh" />
			<add sequence="theme" />
			<add sequence="tpl(\.php" />
			<add sequence="Root" />
			<add sequence="Tag" />
			<add sequence="Template" />
			<add sequence="Repository" />
			<add sequence="code-style" />
		</denyUrlSequences>
		<fileExtensions>
			<add fileExtension=".sql" allowed="false" />
			<add fileExtension=".pl" allowed="false" />
		</fileExtensions>
	</requestFiltering>
</security>